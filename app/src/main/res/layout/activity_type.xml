<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_type"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.asus.nsc2017.Type"
    android:background="@drawable/login">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:hint="จังหวัด"
        android:ems="10"
        android:id="@+id/province"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:paddingStart="4dp" />

    <Button
        android:text="OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/okBtn"
        android:layout_below="@+id/province"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/license2"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:layout_width="wrap_content"
        android:layout_row="0"
        android:layout_column="5"
        android:hint="ทะเบียน"
        android:paddingStart="4dp"
        android:layout_above="@+id/province"
        android:layout_alignLeft="@+id/province"
        android:layout_alignStart="@+id/province"
        android:layout_marginBottom="19dp" />

</RelativeLayout>
